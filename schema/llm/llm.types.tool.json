{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://corpusos.com/schemas/llm/llm.types.tool.json",
  "title": "LLM Tool",
  "description": "A single tool definition (typically used within llm.types.tools).",
  "type": "object",
  "properties": {
    "type": {
      "type": "string"
    },
    "function": {
      "type": [
        "object",
        "null"
      ],
      "additionalProperties": true
    },
    "name": {
      "type": [
        "string",
        "null"
      ]
    },
    "description": {
      "type": [
        "string",
        "null"
      ]
    }
  },
  "required": [
    "type"
  ],
  "additionalProperties": true,
  "allOf": [
    {
      "if": {
        "properties": {
          "type": {
            "const": "function"
          }
        },
        "required": [
          "type"
        ]
      },
      "then": {
        "required": [
          "function"
        ]
      }
    }
  ]
}
