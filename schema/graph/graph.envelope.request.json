{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://corpusos.com/schemas/graph/graph.envelope.request.json",
  "title": "Graph Request Envelope",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "op",
    "ctx",
    "args"
  ],
  "properties": {
    "op": {
      "type": "string",
      "enum": [
        "graph.batch",
        "graph.capabilities",
        "graph.create_edge",
        "graph.create_vertex",
        "graph.delete_edge",
        "graph.delete_nodes",
        "graph.delete_vertex",
        "graph.health",
        "graph.query",
        "graph.stream_query",
        "graph.upsert_nodes"
      ]
    },
    "ctx": {
      "$ref": "https://corpusos.com/schemas/common/operation_context.json"
    },
    "args": {
      "oneOf": [
        {
          "$ref": "https://corpusos.com/schemas/graph/graph.upsert_nodes.request.json"
        },
        {
          "$ref": "https://corpusos.com/schemas/graph/graph.delete_nodes.request.json"
        },
        {
          "$ref": "https://corpusos.com/schemas/graph/graph.edge.create.request.json"
        },
        {
          "$ref": "https://corpusos.com/schemas/graph/graph.edge.delete.request.json"
        },
        {
          "$ref": "https://corpusos.com/schemas/graph/graph.query.request.json"
        },
        {
          "$ref": "https://corpusos.com/schemas/graph/graph.stream_query.request.json"
        },
        {
          "$ref": "https://corpusos.com/schemas/graph/graph.batch.request.json"
        },
        {
          "type": "object",
          "additionalProperties": false,
          "maxProperties": 0,
          "description": "Empty args for health and capabilities operations"
        }
      ]
    },
    "protocol": {
      "type": "string",
      "const": "graph/v1.0"
    },
    "component": {
      "type": "string",
      "const": "graph"
    }
  }
}
