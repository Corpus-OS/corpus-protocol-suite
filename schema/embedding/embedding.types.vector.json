{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://adaptersdk.org/schemas/embedding/embedding.types.vector.json",
  "title": "Embedding Vector",
  "description": "Canonical embedding vector shape. SIEM-safe: avoid returning raw text unless explicitly requested.",
  "type": "object",
  "additionalProperties": false,
  "required": ["vector", "model", "dimensions"],
  "properties": {
    "vector": {
      "type": "array",
      "minItems": 1,
      "maxItems": 1000000,
      "items": { "type": "number" },
      "$comment": "Adapters MUST reject NaN and Â±Inf at runtime."
    },
    "model": {
      "type": "string",
      "minLength": 1,
      "maxLength": 128,
      "pattern": "^[A-Za-z0-9._:-]{1,128}$"
    },
    "dimensions": {
      "type": "integer",
      "minimum": 1,
      "maximum": 1048576
    },
    "text": {
      "type": ["string", "null"],
      "maxLength": 2000000,
      "description": "Original text. SHOULD be omitted by default to preserve privacy."
    }
  },
  "patternProperties": {
    "^(vendor:)[a-z0-9_.:-]+$": {
      "description": "Vendor/extension namespaced fields.",
      "type": ["string", "number", "boolean", "object", "array", "null"]
    }
  },
  "$comment": "Invariant (semantic): dimensions == vector.length."
}
