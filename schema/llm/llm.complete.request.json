{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://corpusos.com/schemas/llm/llm.complete.request.json",
  "title": "LLM Complete Request",
  "description": "Arguments for llm.complete per protocol ยง11.2",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "model": { "type": "string" },
    "messages": {
      "type": "array",
      "minItems": 1,
      "items": { "$ref": "https://corpusos.com/schemas/llm/llm.types.message.json" }
    },
    "max_tokens": { "type": "integer", "minimum": 1 },
    "temperature": { "type": "number", "minimum": 0.0, "maximum": 2.0 },
    "top_p": { "type": "number", "exclusiveMinimum": 0.0, "maximum": 1.0 },
    "frequency_penalty": { "type": "number", "minimum": -2.0, "maximum": 2.0 },
    "presence_penalty": { "type": "number", "minimum": -2.0, "maximum": 2.0 },
    "stop_sequences": {
      "type": "array",
      "items": { "type": "string" }
    },
    "system_message": { "type": "string" }
  },
  "required": ["model", "messages"]
}