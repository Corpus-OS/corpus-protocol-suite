{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://adaptersdk.org/schemas/llm/llm.sampling.params.json",
  "title": "LLM Sampling Parameters",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "max_tokens": { "type": "integer", "minimum": 1, "maximum": 1000000 },
    "temperature": { "type": "number", "minimum": 0.0, "maximum": 2.0 },
    "top_p": { "type": "number", "exclusiveMinimum": 0.0, "maximum": 1.0 },
    "frequency_penalty": { "type": "number", "minimum": -2.0, "maximum": 2.0 },
    "presence_penalty": { "type": "number", "minimum": -2.0, "maximum": 2.0 },
    "stop": {
      "type": "array",
      "maxItems": 64,
      "items": { "type": "string", "minLength": 1, "maxLength": 256 }
    },
    "seed": { "type": "integer", "minimum": 0, "maximum": 9223372036854775807 },
    "logprobs": { "type": "boolean" },
    "top_logprobs": { "type": "integer", "minimum": 1, "maximum": 5 }
  },
  "$comment": "Mutual dependencies (e.g., logprobsâ†”top_logprobs) are enforced by adapters."
}
