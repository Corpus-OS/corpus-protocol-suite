{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://corpusos.com/schemas/vector/vector.types.query_spec.json",
  "title": "Vector Query Specification",
  "type": "object",
  "properties": {
    "vector": {
      "type": "array",
      "items": {
        "type": "number"
      },
      "minItems": 1
    },
    "top_k": {
      "type": "integer",
      "minimum": 1
    },
    "namespace": {
      "type": "string",
      "minLength": 1,
      "pattern": ".*\\S.*",
      "default": "default"
    },
    "filter": {
      "type": [
        "object",
        "null"
      ],
      "additionalProperties": true
    },
    "include_metadata": {
      "type": "boolean",
      "default": true
    },
    "include_vectors": {
      "type": "boolean",
      "default": false
    }
  },
  "required": [
    "vector",
    "top_k"
  ],
  "additionalProperties": false
}
