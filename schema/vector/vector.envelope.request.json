{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://corpusos.com/schemas/vector/vector.envelope.request.json",
  "title": "Vector Request Envelope",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "op",
    "ctx",
    "args"
  ],
  "properties": {
    "op": {
      "type": "string",
      "enum": [
        "vector.capabilities",
        "vector.delete",
        "vector.health",
        "vector.namespace_create",
        "vector.namespace_delete",
        "vector.query",
        "vector.upsert"
      ]
    },
    "ctx": {
      "$ref": "https://corpusos.com/schemas/common/operation_context.json"
    },
    "args": {
      "type": "object"
    },
    "protocol": {
      "type": "string",
      "const": "vector/v1.0"
    },
    "component": {
      "type": "string",
      "const": "vector"
    }
  }
}
