{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://corpusos.com/schemas/graph/graph.stream.frame.error.json",
  "title": "Graph Stream Frame (error)",
  "type": "object",
  "additionalProperties": false,
  "required": ["event", "code", "error", "message"],
  "properties": {
    "event": { "type": "string", "const": "error" },
    "code": {
      "type": "string",
      "pattern": "^[A-Z0-9_]{1,64}$"
    },
    "error": {
      "type": "string",
      "enum": [
        "AuthError",
        "BadRequest",
        "DeadlineExceeded",
        "NotSupported",
        "ResourceExhausted",
        "TransientNetwork",
        "Unavailable"
      ]
    },
    "message": {
      "type": "string",
      "minLength": 1,
      "maxLength": 2000
    },
    "retry_after_ms": {
      "type": ["integer", "null"],
      "minimum": 0,
      "maximum": 86400000
    }
  }
}
