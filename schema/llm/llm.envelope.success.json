{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://corpusos.com/schemas/llm/llm.envelope.success.json",
  "title": "LLM Success Envelope",
  "description": "Success envelope per protocol \u00a72.4",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "ok": {
      "type": "boolean",
      "const": true
    },
    "code": {
      "type": "string",
      "const": "OK"
    },
    "ms": {
      "type": "number",
      "minimum": 0
    },
    "protocol": {
      "type": "string",
      "const": "llm/v1.0"
    },
    "component": {
      "type": "string",
      "const": "llm"
    },
    "schema_version": {
      "type": "string",
      "pattern": "^[0-9]+\\.[0-9]+\\.[0-9]+$"
    },
    "warnings": {
      "type": "array",
      "items": {
        "$ref": "https://corpusos.com/schemas/llm/llm.types.warning.json"
      }
    },
    "request_id": {
      "type": "string",
      "description": "Echoed request_id from the request context"
    },
    "result": {
      "type": "object"
    },
    "chunk": {
      "type": "object",
      "description": "Streaming chunk data (mutually exclusive with result)"
    }
  },
  "required": [
    "ok",
    "code",
    "ms"
  ],
  "oneOf": [
    {
      "required": [
        "result"
      ]
    },
    {
      "required": [
        "chunk"
      ]
    }
  ]
}
