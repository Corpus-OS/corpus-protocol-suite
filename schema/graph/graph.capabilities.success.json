{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://adaptersdk.org/schemas/graph/graph.capabilities.success.json",
  "title": "Graph Capabilities",
  "type": "object",
  "additionalProperties": false,
  "required": ["protocol", "server", "version", "features", "limits"],
  "properties": {
    "protocol": { "type": "string", "const": "graph/v1.0" },
    "server": { "type": "string", "minLength": 1, "maxLength": 128 },
    "version": { "type": "string", "minLength": 1, "maxLength": 64 },
    "features": {
      "type": "object",
      "additionalProperties": false,
      "required": ["dialects", "supports_txn", "supports_schema_ops", "supports_streaming", "supports_deadline"],
      "properties": {
        "dialects": {
          "type": "array",
          "minItems": 1,
          "maxItems": 16,
          "items": { "type": "string", "minLength": 1, "maxLength": 32 }
        },
        "supports_txn": { "type": "boolean" },
        "supports_schema_ops": { "type": "boolean" },
        "supports_streaming": { "type": "boolean" },
        "supports_deadline": { "type": "boolean" }
      }
    },
    "limits": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "max_batch_ops": { "type": ["integer", "null"], "minimum": 1 },
        "concurrency": { "type": ["integer", "null"], "minimum": 1 },
        "max_query_length": { "type": ["integer", "null"], "minimum": 1 }
      }
    },
    "cache": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "supports_tags": { "type": "boolean" },
        "max_ttl_ms": { "type": "integer", "minimum": 0 },
        "invalidation_webhook": { "type": "boolean" }
      }
    },
    "extensions": { "type": "object", "additionalProperties": true }
  }
}
