{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://adaptersdk.org/schemas/graph/graph.envelope.success.json",
  "title": "Graph Success Envelope",
  "type": "object",
  "additionalProperties": false,
  "required": ["ok", "code", "ms", "result"],
  "properties": {
    "ok": { "type": "boolean", "const": true },
    "code": { "type": "string", "enum": ["OK", "PARTIAL_SUCCESS"] },
    "ms": { "type": "number", "minimum": 0 },
    "result": {
      "oneOf": [
        { "$ref": "https://adaptersdk.org/schemas/graph/graph.id.success.json" },
        { "$ref": "https://adaptersdk.org/schemas/graph/graph.ack.success.json" },
        { "$ref": "https://adaptersdk.org/schemas/graph/graph.query.success.json" },
        { "$ref": "https://adaptersdk.org/schemas/graph/graph.health.success.json" },
        { "$ref": "https://adaptersdk.org/schemas/graph/graph.capabilities.success.json" },
        { "$ref": "#/$defs/batchResult" }
      ]
    },
    "protocol": { "type": "string", "const": "graph/v1.0" },
    "component": { "type": "string", "const": "graph" },
    "schema_version": { "type": "string", "pattern": "^[0-9]+\\.[0-9]+\\.[0-9]+$" },
    "request_id": { "type": "string", "pattern": "^[A-Za-z0-9._~:-]{1,256}$" },
    "result_hash": {
      "type": "string",
      "pattern": "^[A-Fa-f0-9]{64}$",
      "description": "SHA-256 of canonical JSON of `result`."
    },
    "warnings": {
      "type": "array",
      "maxItems": 100,
      "items": { "$ref": "https://adaptersdk.org/schemas/graph/graph.types.warning.json" }
    },
    "deprecated": { "type": "boolean", "default": false },
    "replacement_op": {
      "oneOf": [
        {
          "type": "string",
          "enum": [
            "graph.create_vertex",
            "graph.delete_vertex",
            "graph.create_edge",
            "graph.delete_edge",
            "graph.query",
            "graph.stream_query",
            "graph.batch"
          ]
        },
        {
          "type": "array",
          "maxItems": 8,
          "items": {
            "type": "string",
            "enum": [
              "graph.create_vertex",
              "graph.delete_vertex",
              "graph.create_edge",
              "graph.delete_edge",
              "graph.query",
              "graph.stream_query",
              "graph.batch"
            ]
          }
        }
      ]
    }
  },
  "$defs": {
    "batchItemSuccess": {
      "type": "object",
      "required": ["index", "ok", "result"],
      "additionalProperties": false,
      "properties": {
        "index": { "type": "integer", "minimum": 0 },
        "ok": { "type": "boolean", "const": true },
        "result": {
          "oneOf": [
            { "$ref": "https://adaptersdk.org/schemas/graph/graph.id.success.json" },
            { "$ref": "https://adaptersdk.org/schemas/graph/graph.ack.success.json" },
            { "$ref": "https://adaptersdk.org/schemas/graph/graph.query.success.json" }
          ]
        }
      }
    },
    "batchItemFailure": {
      "type": "object",
      "required": ["index", "ok", "code", "message"],
      "additionalProperties": false,
      "properties": {
        "index": { "type": "integer", "minimum": 0 },
        "ok": { "type": "boolean", "const": false },
        "code": { "type": "string", "pattern": "^[A-Z0-9_]{1,64}$" },
        "message": { "type": "string", "minLength": 1, "maxLength": 2000 },
        "details": { "type": "object", "additionalProperties": true }
      }
    },
    "batchResult": {
      "type": "object",
      "additionalProperties": false,
      "required": ["successes", "failures", "items"],
      "properties": {
        "successes": { "type": "integer", "minimum": 0 },
        "failures": { "type": "integer", "minimum": 0 },
        "items": {
          "type": "array",
          "minItems": 1,
          "maxItems": 5000,
          "items": {
            "oneOf": [
              { "$ref": "#/$defs/batchItemSuccess" },
              { "$ref": "#/$defs/batchItemFailure" }
            ]
          }
        }
      },
      "$comment": "Invariant (not enforceable in JSON Schema): successes + failures == items.length; successes >= 1 and failures >= 1 for PARTIAL_SUCCESS."
    }
  }
}
