{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://adaptersdk.org/schemas/llm/llm.count_tokens.request.json",
  "title": "llm.count_tokens Args",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "text": { "type": "string", "minLength": 0, "maxLength": 2000000 },
    "messages": {
      "type": "array",
      "minItems": 1,
      "maxItems": 512,
      "items": { "$ref": "https://adaptersdk.org/schemas/llm/llm.types.message.json" }
    },
    "model": { "type": "string", "maxLength": 128 }
  },
  "oneOf": [
    { "required": ["text"] },
    { "required": ["messages"] }
  ]
}
