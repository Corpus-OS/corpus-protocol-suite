{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://corpusos.com/schemas/graph/graph.envelope.request.json",
  "title": "Graph Request Envelope",
  "type": "object",
  "additionalProperties": false,
  "required": ["op", "ctx", "args"],
  "properties": {
    "op": {
      "type": "string",
      "enum": [
        "graph.upsert_nodes",
        "graph.delete_nodes",
        "graph.upsert_edges",
        "graph.delete_edges",
        "graph.query",
        "graph.stream_query",
        "graph.bulk_vertices",
        "graph.get_schema",
        "graph.health",
        "graph.capabilities"
      ]
    },
    "ctx": {
      "$ref": "https://corpusos.com/schemas/common/operation_context.json"
    },
    "args": {
      "oneOf": [
        {
          "$ref": "https://corpusos.com/schemas/graph/graph.upsert_nodes.request.json"
        },
        {
          "$ref": "https://corpusos.com/schemas/graph/graph.delete_nodes.request.json"
        },
        {
          "$ref": "https://corpusos.com/schemas/graph/graph.upsert_edges.request.json"
        },
        {
          "$ref": "https://corpusos.com/schemas/graph/graph.delete_edges.request.json"
        },
        {
          "$ref": "https://corpusos.com/schemas/graph/graph.query.request.json"
        },
        {
          "$ref": "https://corpusos.com/schemas/graph/graph.stream_query.request.json"
        },
        {
          "$ref": "https://corpusos.com/schemas/graph/graph.bulk_vertices.request.json"
        },
        {
          "$ref": "https://corpusos.com/schemas/graph/graph.get_schema.request.json"
        },
        {
          "type": "object",
          "additionalProperties": false,
          "maxProperties": 0
        },
        {
          "type": "object",
          "additionalProperties": false,
          "maxProperties": 0
        }
      ]
    }
  }
}
