{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://corpusos.com/schemas/vector/vector.health.success.json",
  "title": "vector.health result",
  "description": "Health status for vector component per protocol ยง15.7.",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "ok": { "type": "boolean" },
    "status": { "type": "string", "enum": ["degraded", "ok"] },
    "server": { "type": "string" },
    "version": { "type": "string" },
    "namespaces": {
      "type": "object",
      "additionalProperties": {
        "type": "object",
        "properties": {
          "ready": { "type": "boolean" },
          "vector_count": { "type": "integer", "minimum": 0 },
          "dimensions": { "type": "integer", "minimum": 1 },
          "index_status": { "type": "string" },
          "read_only": { "type": "boolean" }
        },
        "required": ["ready", "vector_count", "dimensions"]
      }
    },
    "total_vector_count": { "type": "integer", "minimum": 0 },
    "message": { "type": "string" }
  },
  "required": ["ok", "server", "version", "namespaces"]
}