{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://corpusos.com/schemas/vector/vector.envelope.success.json",
  "title": "Vector Success Envelope",
  "description": "Canonical success envelope for vector operations per protocol \u00a72.4.",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "ok": {
      "type": "boolean",
      "const": true
    },
    "code": {
      "type": "string",
      "const": "OK"
    },
    "ms": {
      "type": "number",
      "minimum": 0
    },
    "protocol": {
      "type": "string",
      "const": "vector/v1.0"
    },
    "component": {
      "type": "string",
      "const": "vector"
    },
    "schema_version": {
      "type": "string",
      "pattern": "^[0-9]+\\.[0-9]+\\.[0-9]+$"
    },
    "warnings": {
      "type": "array",
      "items": {
        "type": "object"
      }
    },
    "request_id": {
      "type": "string",
      "description": "Echoed request_id from the request context"
    },
    "result": {
      "type": "object"
    }
  },
  "required": [
    "ok",
    "code",
    "ms",
    "result"
  ]
}
