{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://corpusos.com/schemas/graph/graph.envelope.success.json",
  "title": "Graph Success Envelope",
  "type": "object",
  "additionalProperties": false,
  "required": ["ok", "code", "ms", "result"],
  "properties": {
    "ok": { "type": "boolean", "const": true },
    "code": { "type": "string", "enum": ["OK", "PARTIAL_SUCCESS"] },
    "ms": { "type": "number", "minimum": 0 },
    "result": {
      "oneOf": [
        {
          "$ref": "https://corpusos.com/schemas/graph/graph.id.success.json"
        },
        {
          "$ref": "https://corpusos.com/schemas/graph/graph.ack.success.json"
        },
        {
          "$ref": "https://corpusos.com/schemas/graph/graph.query.success.json"
        },
        {
          "$ref": "https://corpusos.com/schemas/graph/graph.health.success.json"
        },
        {
          "$ref": "https://corpusos.com/schemas/graph/graph.capabilities.success.json"
        },
        {
          "$ref": "https://corpusos.com/schemas/graph/graph.types.partial_success_result.json"
        }
      ]
    },
    "protocol": { "type": "string", "const": "graph/v1.0" },
    "component": { "type": "string", "const": "graph" },
    "schema_version": {
      "type": "string",
      "pattern": "^[0-9]+\\.[0-9]+\\.[0-9]+$"
    },
    "request_id": {
      "type": "string",
      "pattern": "^[A-Za-z0-9._~:-]{1,256}$"
    },
    "result_hash": {
      "type": "string",
      "pattern": "^[A-Fa-f0-9]{64}$",
      "description": "SHA-256 of canonical JSON of `result`."
    },
    "warnings": {
      "type": "array",
      "maxItems": 100,
      "items": {
        "$ref": "https://corpusos.com/schemas/graph/graph.types.warning.json"
      }
    },
    "deprecation": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "deprecated": {
          "type": "boolean",
          "default": false
        },
        "replacements": {
          "type": "array",
          "maxItems": 8,
          "items": {
            "type": "string",
            "pattern": "^graph\\.[a-z_]+$"
          }
        },
        "note": {
          "type": "string",
          "maxLength": 2000
        }
      }
    }
  },
  "allOf": [
    {
      "if": {
        "properties": {
          "code": { "const": "PARTIAL_SUCCESS" }
        },
        "required": ["code"]
      },
      "then": {
        "properties": {
          "result": {
            "required": ["successes", "failures", "items"]
          }
        }
      }
    }
  ]
}
