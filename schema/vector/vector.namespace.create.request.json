{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://corpusos.com/schemas/vector/vector.namespace.create.request.json",
  "title": "vector.create_namespace args",
  "description": "Arguments for op: vector.create_namespace per protocol ยง15.5.",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "namespace": {
      "type": "string",
      "maxLength": 256,
      "pattern": "^[A-Za-z0-9._:-]{1,256}$"
    },
    "dimensions": { "type": "integer", "minimum": 1 },
    "distance_metric": { "type": "string", "enum": ["cosine", "euclidean", "dotproduct"] }
  },
  "required": ["namespace", "dimensions", "distance_metric"],
  "$comment": "Namespaces MUST be created explicitly; other operations MUST NOT create implicitly."
}