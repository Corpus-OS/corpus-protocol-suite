{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://corpusos.com/schemas/graph/graph.envelope.request.json",
  "title": "Graph Request Envelope",
  "type": "object",
  "additionalProperties": false,
  "required": ["op", "ctx", "args"],
  "properties": {
    "op": {
      "type": "string",
      "enum": [
        "graph.create_vertex",
        "graph.delete_vertex",
        "graph.create_edge",
        "graph.delete_edge",
        "graph.query",
        "graph.stream_query",
        "graph.batch",
        "graph.health",
        "graph.capabilities"
      ]
    },
    "ctx": {
      "$ref": "https://corpusos.com/schemas/common/operation_context.json"
    },
    "args": {
      "oneOf": [
        {
          "$ref": "https://corpusos.com/schemas/graph/graph.vertex.create.request.json"
        },
        {
          "$ref": "https://corpusos.com/schemas/graph/graph.vertex.delete.request.json"
        },
        {
          "$ref": "https://corpusos.com/schemas/graph/graph.edge.create.request.json"
        },
        {
          "$ref": "https://corpusos.com/schemas/graph/graph.edge.delete.request.json"
        },
        {
          "$ref": "https://corpusos.com/schemas/graph/graph.query.request.json"
        },
        {
          "$ref": "https://corpusos.com/schemas/graph/graph.stream_query.request.json"
        },
        {
          "$ref": "https://corpusos.com/schemas/graph/graph.batch.request.json"
        },
        {
          "type": "object",
          "additionalProperties": false,
          "maxProperties": 0
        },
        {
          "type": "object",
          "additionalProperties": false,
          "maxProperties": 0
        }
      ]
    }
  }
}
