{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://corpusos.com/schemas/llm/llm.types.tool.json",
  "title": "LLM Tool Types",
  "description": "Tool types aligned with protocol ยง10.1 - used when capabilities.supports_function_calling = true",
  "type": "object",
  "$defs": {
    "toolCall": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "id": { "type": "string" },
        "type": { "type": "string", "const": "function" },
        "function": {
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "name": { "type": "string" },
            "arguments": { "type": "string" }
          },
          "required": ["name", "arguments"]
        }
      },
      "required": ["id", "type", "function"]
    },
    "toolChoice": {
      "oneOf": [
        { "type": "string", "enum": ["auto", "required"] },
        {
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "type": { "type": "string", "const": "tool" },
            "name": { "type": "string" }
          },
          "required": ["type", "name"]
        }
      ]
    }
  }
}