{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://corpusos.com/schemas/llm/llm.health.success.json",
  "title": "LLM Health",
  "description": "Health status per protocol ยง11.5",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "ok": { "type": "boolean" },
    "server": { "type": "string" },
    "version": { "type": "string" },
    "status": { "type": "string", "enum": ["degraded", "ok"] },
    "models": {
      "type": "object",
      "additionalProperties": {
        "type": "object",
        "properties": {
          "available": { "type": "boolean" },
          "rate_limited": { "type": "boolean" },
          "degraded": { "type": "boolean" }
        },
        "required": ["available"]
      }
    },
    "rate_limits": {
      "type": "object",
      "properties": {
        "tokens_per_minute": { "type": "number" },
        "requests_per_minute": { "type": "number" }
      }
    },
    "message": { "type": "string" }
  },
  "required": ["ok", "server", "version"]
}