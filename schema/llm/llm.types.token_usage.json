{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://adaptersdk.org/schemas/llm/llm.types.token_usage.json",
  "title": "Token Usage",
  "type": "object",
  "additionalProperties": false,
  "required": ["prompt_tokens", "completion_tokens", "total_tokens"],
  "properties": {
    "prompt_tokens": { "type": "integer", "minimum": 0, "maximum": 10000000 },
    "completion_tokens": { "type": "integer", "minimum": 0, "maximum": 10000000 },
    "total_tokens": { "type": "integer", "minimum": 0, "maximum": 10000000 }
  },
  "$comment": "Implementations MUST ensure total_tokens = prompt_tokens + completion_tokens."
}
