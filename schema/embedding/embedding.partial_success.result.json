{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://corpusos.com/schemas/embedding/embedding.partial_success.result.json",
  "title": "Embedding Partial-Success Result",
  "description": "Result payload for transport-level partial success (code=PARTIAL_SUCCESS) per ยง23.4. Captures per-item outcomes for embed_batch with stable, machine-actionable fields.",
  "type": "object",
  "additionalProperties": false,
  "required": ["successes", "failures", "items"],
  "properties": {
    "successes": {
      "type": "integer",
      "minimum": 1,
      "description": "Number of successful items (MUST be >= 1 for PARTIAL_SUCCESS)."
    },
    "failures": {
      "type": "integer",
      "minimum": 1,
      "description": "Number of failed items (MUST be >= 1 for PARTIAL_SUCCESS)."
    },
    "items": {
      "type": "array",
      "minItems": 2,
      "maxItems": 10000,
      "description": "Per-item outcomes in the same order as input texts.",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["index", "ok"],
        "properties": {
          "index": {
            "type": "integer",
            "minimum": 0,
            "description": "Zero-based index into the original request batch."
          },
          "ok": {
            "type": "boolean",
            "description": "True if this item succeeded; false if it failed."
          },
          "result": {
            "description": "Present when ok=true: the computed embedding vector and metadata.",
            "$ref": "https://corpusos.com/schemas/embedding/embedding.types.vector.json"
          },
          "code": {
            "type": "string",
            "pattern": "^[A-Z0-9_]{1,64}$",
            "description": "Present when ok=false: normalized error code (e.g., TEXT_TOO_LONG, MODEL_NOT_AVAILABLE)."
          },
          "message": {
            "type": "string",
            "minLength": 1,
            "maxLength": 2000,
            "description": "Present when ok=false: human-readable, SIEM-safe summary."
          },
          "details": {
            "type": "object",
            "description": "Optional, SIEM-safe structured context for failures (e.g., max_text_length, provided_length, provider_code).",
            "additionalProperties": true,
            "properties": {
              "max_text_length": {
                "type": "integer",
                "minimum": 1
              },
              "provided_length": {
                "type": "integer",
                "minimum": 0
              },
              "provider_code": {
                "type": "string",
                "maxLength": 128
              },
              "validation_errors": {
                "type": "array",
                "maxItems": 256,
                "items": {
                  "type": "object",
                  "additionalProperties": false,
                  "required": ["field", "reason"],
                  "properties": {
                    "field": {
                      "type": "string",
                      "maxLength": 256
                    },
                    "reason": {
                      "type": "string",
                      "maxLength": 512
                    },
                    "constraint": {
                      "type": "string",
                      "maxLength": 128
                    }
                  }
                }
              }
            }
          },
          "warnings": {
            "type": "array",
            "maxItems": 100,
            "items": {
              "$ref": "https://corpusos.com/schemas/embedding/embedding.types.warning.json"
            },
            "description": "Optional non-fatal warnings associated with this item."
          }
        },
        "allOf": [
          {
            "if": {
              "properties": {
                "ok": {
                  "const": true
                }
              },
              "required": ["ok"]
            },
            "then": {
              "required": ["result"]
            }
          },
          {
            "if": {
              "properties": {
                "ok": {
                  "const": false
                }
              },
              "required": ["ok"]
            },
            "then": {
              "required": ["code", "message"]
            }
          }
        ]
      }
    },
    "warnings": {
      "type": "array",
      "maxItems": 100,
      "items": {
        "$ref": "https://corpusos.com/schemas/embedding/embedding.types.warning.json"
      },
      "description": "Optional batch-level warnings (e.g., truncation applied to some items)."
    }
  },
  "patternProperties": {
    "^(vendor:)[a-z0-9_.:-]+$": {
      "description": "Vendor/extension namespaced fields. Must not conflict with standardized keys.",
      "type": ["string", "number", "boolean", "object", "array", "null"]
    }
  },
  "$comment": "Invariants (not enforceable in pure JSON Schema): successes + failures == items.length; successes >= 1 AND failures >= 1 for transport-level PARTIAL_SUCCESS; items preserve input order by index. Security/Privacy: messages/details MUST be SIEM-safe (no raw texts, no secrets, no raw tenant IDs)."
}
