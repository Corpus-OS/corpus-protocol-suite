{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://corpusos.com/schemas/vector/vector.delete.success.json",
  "title": "vector.delete result",
  "description": "Result payload for vector.delete following protocol ยง14.8 BatchResult pattern.",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "deleted_count": { "type": "integer", "minimum": 0 },
    "failed_count": { "type": "integer", "minimum": 0 },
    "filter_applied_count": { "type": ["integer", "null"], "minimum": 0 },
    "failures": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "properties": {
          "id": { "type": ["string", "null"] },
          "index": { "type": ["integer", "null"] },
          "error": { "type": "string" },
          "detail": { "type": "string" }
        },
        "required": ["error", "detail"]
      }
    }
  },
  "required": ["deleted_count", "failed_count", "failures"],
  "$comment": "For filter deletes where individual IDs are unknown, failures array may be empty if failed_count is 0. filter_applied_count indicates how many vectors matched filter criteria."
}