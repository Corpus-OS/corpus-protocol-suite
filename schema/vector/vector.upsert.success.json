{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://adaptersdk.org/schemas/vector/vector.upsert.success.json",
  "title": "vector.upsert result",
  "description": "Result payload for vector.upsert, including partial success reporting.",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "code": { "type": "string", "enum": ["OK", "PARTIAL_SUCCESS"] },
    "successes": { "type": "integer", "minimum": 0 },
    "failures": { "type": "integer", "minimum": 0 },
    "items": {
      "type": "array",
      "minItems": 1,
      "maxItems": 100000,
      "items": {
        "oneOf": [
          {
            "title": "SuccessItem",
            "type": "object",
            "additionalProperties": false,
            "properties": {
              "index": { "type": "integer", "minimum": 0 },
              "ok": { "type": "boolean", "const": true },
              "id": { "type": ["string", "null"], "maxLength": 256 },
              "result": { "type": ["object", "null"], "additionalProperties": true }
            },
            "required": ["index", "ok"]
          },
          { "$ref": "https://adaptersdk.org/schemas/vector/vector.types.failure_item.json" }
        ]
      }
    },
    "warnings": {
      "type": "array",
      "maxItems": 100,
      "items": {
        "type": "object",
        "additionalProperties": false,
        "properties": {
          "code": { "type": "string", "pattern": "^[A-Z0-9_]{2,64}$" },
          "message": { "type": "string", "maxLength": 1000 }
        },
        "required": ["code", "message"]
      }
    }
  },
  "required": ["code", "successes", "failures", "items"],
  "$comment": "Maintain input order in items. For PARTIAL_SUCCESS, ensure successes+failures==items.length with at least one of each."
}
