{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://corpusos.com/schemas/llm/llm.stream.frame.data.json",
  "title": "LLM Stream Frame (data)",
  "type": "object",
  "additionalProperties": false,
  "required": ["event", "data"],
  "properties": {
    "event": { "type": "string", "const": "data" },
    "data": {
      "type": "object",
      "additionalProperties": false,
      "required": ["id", "model", "index", "delta"],
      "properties": {
        "id": { "type": "string" },
        "model": { "type": "string" },
        "index": { "type": "integer", "minimum": 0 },
        "delta": {
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "role": { "type": "string" },
            "content": { "type": ["string", "null"] }
          }
        },
        "finish_reason": { "type": ["string", "null"] },
        "logprobs": { "type": ["object", "null"] }
      }
    }
  },
  "$comment": "Frame size SHOULD be â‰¤ 1 MiB; heartbeats MAY be empty-data frames per spec."
}
