{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://adaptersdk.org/schemas/llm/llm.stream.frame.end.json",
  "title": "LLM Stream Terminal Success Frame",
  "type": "object",
  "additionalProperties": false,
  "required": ["event", "code", "total_frames"],
  "properties": {
    "event": { "const": "end" },
    "code": { "const": "OK" },
    "usage": { "$ref": "https://adaptersdk.org/schemas/llm/llm.types.token_usage.json" },
    "ms": { "type": "number", "minimum": 0, "description": "Total server-side processing time." },
    "total_frames": { "type": "integer", "minimum": 1 },
    "checksum": {
      "type": "string",
      "pattern": "^[A-Fa-f0-9]{64}$",
      "description": "SHA-256 of concatenated chunk.text in emission order."
    },
    "backpressure": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "suggested_sleep_ms": { "type": "integer", "minimum": 0 },
        "queue_depth": { "type": "integer", "minimum": 0 }
      }
    }
  }
}
