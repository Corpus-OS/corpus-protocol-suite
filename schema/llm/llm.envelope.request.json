{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://corpusos.com/schemas/llm/llm.envelope.request.json",
  "title": "LLM Request Envelope",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "op",
    "ctx",
    "args"
  ],
  "properties": {
    "op": {
      "type": "string",
      "enum": [
        "llm.capabilities",
        "llm.complete",
        "llm.count_tokens",
        "llm.health",
        "llm.stream"
      ]
    },
    "ctx": {
      "$ref": "https://corpusos.com/schemas/common/operation_context.json"
    },
    "args": {
      "type": "object"
    },
    "protocol": {
      "type": "string",
      "const": "llm/v1.0"
    },
    "component": {
      "type": "string",
      "const": "llm"
    }
  }
}
