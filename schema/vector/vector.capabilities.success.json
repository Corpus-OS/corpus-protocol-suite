{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://corpusos.com/schemas/vector/vector.capabilities.success.json",
  "title": "vector.capabilities result",
  "description": "Capabilities and limits advertised by the vector adapter per protocol ยง13.1.",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "protocol": { "type": "string", "const": "vector/v1.0" },
    "server": { "type": "string", "minLength": 1 },
    "version": { "type": "string", "minLength": 1 },
    "max_dimensions": { "type": "integer", "minimum": 1 },
    "supported_metrics": {
      "type": "array",
      "items": { "type": "string", "enum": ["cosine", "euclidean", "dotproduct"] },
      "minItems": 1
    },
    "supports_namespaces": { "type": "boolean" },
    "supports_metadata_filtering": { "type": "boolean" },
    "supports_batch_operations": { "type": "boolean" },
    "supports_index_management": { "type": "boolean" },
    "supports_deadline": { "type": "boolean" },
    "idempotent_writes": { "type": "boolean" },
    "supports_multi_tenant": { "type": "boolean" },
    "max_batch_size": { "type": ["integer", "null"], "minimum": 1 },
    "max_top_k": { "type": ["integer", "null"], "minimum": 1 },
    "max_filter_terms": { "type": ["integer", "null"], "minimum": 1 },
    "supports_hybrid_search": { "type": "boolean" },
    "supports_sparse_vectors": { "type": "boolean" },
    "max_namespaces": { "type": ["integer", "null"], "minimum": 1 },
    "supports_vector_compression": { "type": "boolean" }
  },
  "required": [
    "protocol",
    "server", 
    "version",
    "max_dimensions",
    "supported_metrics",
    "supports_namespaces",
    "supports_metadata_filtering",
    "supports_batch_operations",
    "supports_index_management",
    "supports_deadline",
    "idempotent_writes",
    "supports_multi_tenant"
  ]
}