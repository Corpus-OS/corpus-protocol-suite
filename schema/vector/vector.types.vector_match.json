{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://corpusos.com/schemas/vector/vector.types.vector_match.json",
  "title": "VectorMatch",
  "description": "A single match entry returned from vector.query per protocol ยง14.2.",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "vector": {
      "oneOf": [
        {
          "type": "array",
          "minItems": 1,
          "items": { "type": "number" }
        },
        {
          "$ref": "https://corpusos.com/schemas/vector/vector.types.vector.json"
        }
      ]
    },
    "score": {
      "type": "number",
      "description": "Similarity score (higher = more similar)."
    },
    "distance": {
      "type": "number",
      "description": "Raw distance metric (lower = more similar)."
    },
    "id": { "type": "string" },
    "dimensions": { "type": "integer", "minimum": 1 },
    "namespace": { "type": "string" },
    "metadata": { "type": "object" }
  },
  "required": ["vector", "score"]
}