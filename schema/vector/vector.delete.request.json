{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://corpusos.com/schemas/vector/vector.delete.request.json",
  "title": "vector.delete args",
  "description": "Arguments for op: vector.delete",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "ids": {
      "type": ["array", "null"],
      "items": {
        "type": "string",
        "minLength": 1,
        "maxLength": 256
      },
      "uniqueItems": true,
      "minItems": 1
    },
    "namespace": {
      "type": "string",
      "default": "default",
      "maxLength": 256,
      "pattern": "^[A-Za-z0-9._:-]{1,256}$"
    },
    "filter": {
      "type": ["object", "null"],
      "$ref": "https://corpusos.com/schemas/vector/vector.types.filter.json"
    }
  },
  "allOf": [
    {
      "anyOf": [
        { 
          "required": ["ids"],
          "properties": {
            "ids": { "minItems": 1 }
          }
        },
        { "required": ["filter"] }
      ]
    }
  ],
  "$comment": "Delete by IDs OR filter. At least one must be provided. Deleting non-existent IDs MUST be treated as success (idempotent). Batch size limits enforced via capabilities.max_batch_size."
}