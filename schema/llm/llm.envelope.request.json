{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://adaptersdk.org/schemas/llm/llm.envelope.request.json",
  "title": "LLM Request Envelope",
  "type": "object",
  "additionalProperties": false,
  "required": ["op", "ctx", "args"],
  "properties": {
    "op": {
      "type": "string",
      "enum": ["llm.complete", "llm.stream", "llm.count_tokens", "llm.capabilities", "llm.health"]
    },
    "ctx": { "$ref": "https://adaptersdk.org/schemas/common/operation_context.json" },
    "args": {
      "oneOf": [
        { "$ref": "https://adaptersdk.org/schemas/llm/llm.complete.request.json" },
        { "$ref": "https://adaptersdk.org/schemas/llm/llm.count_tokens.request.json" },
        { "type": "object", "additionalProperties": false, "maxProperties": 0 },  
        { "type": "object", "additionalProperties": false, "maxProperties": 0 }   
      ]
    }
  }
}
