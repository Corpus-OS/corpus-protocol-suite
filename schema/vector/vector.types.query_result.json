{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://adaptersdk.org/schemas/vector/vector.types.query_result.json",
  "title": "QueryResult",
  "description": "Structured result payload from vector.query.",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "matches": {
      "type": "array",
      "items": { "$ref": "https://adaptersdk.org/schemas/vector/vector.types.vector_match.json" }
    },
    "query_vector": {
      "type": "array",
      "minItems": 1,
      "maxItems": 8192,
      "items": { "type": "number" },
      "description": "Echo of the query vector when included by adapter; optional per capabilities."
    },
    "namespace": {
      "type": "string",
      "maxLength": 256,
      "pattern": "^[A-Za-z0-9._:-]{1,256}$"
    },
    "total_matches": {
      "type": "integer",
      "minimum": 0
    },
    "next_page_token": {
      "type": ["string", "null"],
      "maxLength": 4096,
      "pattern": "^[A-Za-z0-9+/=_-]{1,4096}$",
      "description": "Opaque token for pagination; omit or null if no further pages."
    }
  },
  "required": ["matches", "namespace", "total_matches"],
  "$comment": "Page token semantics per ยง11.5; clients must treat tokens as opaque."
}
