{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://adaptersdk.org/schemas/llm/llm.envelope.success.json",
  "title": "LLM Success Envelope",
  "type": "object",
  "additionalProperties": false,
  "required": ["ok", "code", "ms", "result"],
  "properties": {
    "ok": { "type": "boolean", "const": true },
    "code": { "type": "string", "enum": ["OK"] },
    "ms": { "type": "number", "minimum": 0 },
    "result": {
      "oneOf": [
        { "$ref": "https://adaptersdk.org/schemas/llm/llm.complete.success.json" },
        { "$ref": "https://adaptersdk.org/schemas/llm/llm.count_tokens.success.json" },
        { "$ref": "https://adaptersdk.org/schemas/llm/llm.capabilities.success.json" },
        { "$ref": "https://adaptersdk.org/schemas/llm/llm.health.success.json" }
      ]
    },
    "protocol": { "type": "string", "const": "llm/v1.0" },
    "component": { "type": "string", "const": "llm" },
    "schema_version": { "type": "string", "pattern": "^[0-9]+\\.[0-9]+\\.[0-9]+$" },
    "request_id": { "type": "string", "pattern": "^[A-Za-z0-9._~:-]{1,256}$" },
    "result_hash": {
      "type": "string",
      "pattern": "^[A-Fa-f0-9]{64}$",
      "description": "SHA-256 of canonical JSON of `result`."
    },
    "warnings": {
      "type": "array",
      "maxItems": 100,
      "items": { "$ref": "https://adaptersdk.org/schemas/llm/llm.types.warning.json" }
    },
    "deprecated": { "type": "boolean", "default": false },
    "replacement_op": {
      "oneOf": [
        { "type": "string", "enum": ["llm.complete", "llm.stream", "llm.count_tokens"] },
        { "type": "array", "items": { "type": "string" }, "maxItems": 8 }
      ]
    }
  }
}
