{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://corpusos.com/schemas/llm/llm.capabilities.success.json",
  "title": "LLM Capabilities",
  "description": "LLM capabilities per protocol ยง9.1",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "protocol": { "type": "string", "const": "llm/v1.0" },
    "server": { "type": "string", "minLength": 1 },
    "version": { "type": "string", "minLength": 1 },
    "model_family": { "type": "string" },
    "supported_models": {
      "type": "array",
      "items": { "type": "string" },
      "minItems": 1
    },
    "max_context_length": { "type": "integer", "minimum": 1 },
    "supports_streaming": { "type": "boolean" },
    "supports_roles": { "type": "boolean" },
    "supports_system_message": { "type": "boolean" },
    "supports_json_output": { "type": "boolean" },
    "supports_parallel_tool_calls": { "type": "boolean" },
    "supports_deadline": { "type": "boolean" },
    "supports_count_tokens": { "type": "boolean" },
    "idempotent_writes": { "type": "boolean" },
    "supports_multi_tenant": { "type": "boolean" },
    "max_tokens_per_minute": { "type": ["integer", "null"], "minimum": 1 },
    "max_requests_per_minute": { "type": ["integer", "null"], "minimum": 1 },
    "supports_function_calling": { "type": "boolean" },
    "supports_vision": { "type": "boolean" },
    "supports_logprobs": { "type": "boolean" }
  },
  "required": [
    "protocol",
    "server",
    "version",
    "model_family",
    "supported_models",
    "max_context_length",
    "supports_streaming",
    "supports_roles",
    "supports_system_message",
    "supports_json_output",
    "supports_parallel_tool_calls",
    "supports_deadline",
    "supports_count_tokens",
    "idempotent_writes",
    "supports_multi_tenant"
  ]
}