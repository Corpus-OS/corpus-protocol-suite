{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://adaptersdk.org/schemas/vector/vector.envelope.success.json",
  "title": "Vector Success Envelope",
  "description": "Canonical success envelope for vector operations (non-streaming).",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "ok": { "type": "boolean", "const": true },
    "code": { "type": "string", "enum": ["OK", "PARTIAL_SUCCESS"] },
    "ms": { "type": "number", "minimum": 0 },
    "result": {
      "oneOf": [
        { "$ref": "https://adaptersdk.org/schemas/vector/vector.query.success.json" },
        { "$ref": "https://adaptersdk.org/schemas/vector/vector.upsert.success.json" },
        { "$ref": "https://adaptersdk.org/schemas/vector/vector.delete.success.json" },
        { "$ref": "https://adaptersdk.org/schemas/vector/vector.namespace.create.success.json" },
        { "$ref": "https://adaptersdk.org/schemas/vector/vector.namespace.delete.success.json" },
        { "$ref": "https://adaptersdk.org/schemas/vector/vector.capabilities.success.json" },
        { "$ref": "https://adaptersdk.org/schemas/vector/vector.health.success.json" }
      ]
    },
    "warnings": {
      "type": "array",
      "maxItems": 100,
      "items": {
        "type": "object",
        "additionalProperties": false,
        "properties": {
          "code": { "type": "string", "pattern": "^[A-Z0-9_]{2,64}$" },
          "message": { "type": "string", "maxLength": 1000 }
        },
        "required": ["code", "message"]
      }
    },
    "protocol": { "type": "string", "const": "vector/v1.0" },
    "component": { "type": "string", "const": "vector" },
    "schema_version": {
      "type": "string",
      "pattern": "^[0-9]+\\.[0-9]+\\.[0-9]+$",
      "description": "Authoritative envelope schema version."
    },
    "request_id": {
      "type": "string",
      "pattern": "^[A-Za-z0-9._~:-]{1,256}$"
    },
    "result_hash": {
      "type": ["string", "null"],
      "maxLength": 128,
      "pattern": "^[A-Fa-f0-9]{16,128}$",
      "description": "Hash over canonical JSON of `result` (e.g., SHA-256 hex)."
    },
    "deprecated": { "type": "boolean", "default": false },
    "replacement_op": {
      "oneOf": [
        { "type": "string", "maxLength": 256 },
        {
          "type": "array",
          "minItems": 1,
          "maxItems": 8,
          "items": { "type": "string", "maxLength": 256 }
        },
        { "type": "null" }
      ],
      "description": "Suggested migration path(s) when an op is deprecated."
    }
  },
  "required": ["ok", "code", "ms", "result"]
}
