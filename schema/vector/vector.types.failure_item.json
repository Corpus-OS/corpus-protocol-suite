{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://adaptersdk.org/schemas/vector/vector.types.failure_item.json",
  "title": "FailureItem",
  "description": "Per-item failure record used in partial successes for upsert/delete.",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "index": { "type": "integer", "minimum": 0 },
    "id": {
      "type": ["string", "null"],
      "maxLength": 256,
      "description": "Vector ID (if applicable for delete/upsert item). May be null when not applicable."
    },
    "code": { "type": "string", "pattern": "^[A-Z0-9_]{2,64}$" },
    "message": { "type": ["string", "null"], "maxLength": 2000 },
    "details": { "type": ["object", "null"], "additionalProperties": true }
  },
  "required": ["index", "code"]
}
