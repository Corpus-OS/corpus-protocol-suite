{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://adaptersdk.org/schemas/embedding/embedding.capabilities.success.json",
  "title": "Embedding Capabilities",
  "type": "object",
  "additionalProperties": false,
  "required": ["protocol", "server", "version", "supported_models"],
  "properties": {
    "protocol": { "type": "string", "const": "embedding/v1.0" },
    "server": { "type": "string", "minLength": 1, "maxLength": 128 },
    "version": { "type": "string", "minLength": 1, "maxLength": 64 },
    "supported_models": {
      "type": "array",
      "minItems": 1,
      "maxItems": 4096,
      "items": {
        "oneOf": [
          { "type": "string", "minLength": 1, "maxLength": 128 },
          {
            "type": "object",
            "additionalProperties": false,
            "required": ["name"],
            "properties": {
              "name": { "type": "string", "minLength": 1, "maxLength": 128 },
              "dimensions": { "type": "integer", "minimum": 1 },
              "context_window": { "type": "integer", "minimum": 1 },
              "description": { "type": "string", "maxLength": 2000 }
            },
            "patternProperties": {
              "^(vendor:)[a-z0-9_.:-]+$": { "type": ["string", "number", "boolean", "object", "array", "null"] }
            }
          }
        ]
      }
    },
    "max_batch_size": { "type": "integer", "minimum": 1 },
    "max_text_length": { "type": "integer", "minimum": 1 },
    "max_dimensions": { "type": "integer", "minimum": 1 },
    "supports_normalization": { "type": "boolean" },
    "normalizes_at_source": { "type": "boolean" },
    "supports_truncation": { "type": "boolean" },
    "supports_token_counting": { "type": "boolean" },
    "supports_deadline": { "type": "boolean" },
    "idempotent_operations": { "type": "boolean" },
    "supports_multi_tenant": { "type": "boolean" },
    "cache": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "supports_tags": { "type": "boolean" },
        "max_ttl_ms": { "type": "integer", "minimum": 0 }
      }
    },
    "limits": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "concurrency": { "type": "integer", "minimum": 1 },
        "rate_limit_qps": { "type": "integer", "minimum": 1 }
      }
    },
    "extensions": { "type": "object", "additionalProperties": true }
  },
  "$comment": "Frozen keys for v1.x. New capability keys MUST be added under extensions."
}
