{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://adaptersdk.org/schemas/embedding/embedding.embed_batch.request.json",
  "title": "embedding.embed_batch Args",
  "type": "object",
  "additionalProperties": false,
  "required": ["texts", "model"],
  "properties": {
    "texts": {
      "type": "array",
      "minItems": 1,
      "maxItems": 100000,
      "items": { "type": "string", "minLength": 0, "maxLength": 2000000 }
    },
    "model": { "type": "string", "minLength": 1, "maxLength": 128, "pattern": "^[A-Za-z0-9._:-]{1,128}$" },
    "truncate": { "type": "boolean", "default": true },
    "normalize": { "type": "boolean", "default": false }
  },
  "patternProperties": {
    "^(vendor:)[a-z0-9_.:-]+$": { "type": ["string", "number", "boolean", "object", "array", "null"] }
  },
  "$comment": "Adapters MUST enforce capabilities.max_batch_size when present. Item validation follows single embed rules."
}
