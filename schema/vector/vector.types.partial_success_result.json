{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://adaptersdk.org/schemas/vector/vector.types.partial_success_result.json",
  "title": "PartialSuccessResult",
  "description": "Canonical structure used in success envelopes when code=PARTIAL_SUCCESS.",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "successes": { "type": "integer", "minimum": 1 },
    "failures": { "type": "integer", "minimum": 1 },
    "items": {
      "type": "array",
      "minItems": 1,
      "maxItems": 100000,
      "items": {
        "type": "object",
        "additionalProperties": false,
        "oneOf": [
          {
            "title": "SuccessItem",
            "properties": {
              "index": { "type": "integer", "minimum": 0 },
              "ok": { "type": "boolean", "const": true },
              "result": { "type": ["object", "null"], "additionalProperties": true },
              "id": { "type": ["string", "null"], "maxLength": 256 }
            },
            "required": ["index", "ok"]
          },
          {
            "title": "FailureItem",
            "$ref": "https://adaptersdk.org/schemas/vector/vector.types.failure_item.json"
          }
        ]
      }
    }
  },
  "required": ["successes", "failures", "items"],
  "$comment": "Implementations MUST ensure: successes + failures == items.length; successes>=1; failures>=1."
}
