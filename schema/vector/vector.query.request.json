{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://corpusos.com/schemas/vector/vector.query.request.json",
  "title": "vector.query args",
  "description": "Arguments for op: vector.query per protocol ยง15.2.",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "vector": {
      "type": "array",
      "minItems": 1,
      "items": { "type": "number" }
    },
    "top_k": {
      "type": "integer",
      "minimum": 1
    },
    "namespace": {
      "type": "string",
      "default": "default",
      "maxLength": 256,
      "pattern": "^[A-Za-z0-9._:-]{1,256}$"
    },
    "filter": {
      "type": ["object", "null"],
      "$ref": "https://corpusos.com/schemas/vector/vector.types.filter.json"
    },
    "include_metadata": { "type": "boolean", "default": true },
    "include_vectors": { "type": "boolean", "default": false }
  },
  "required": ["vector", "top_k"],
  "$comment": "Adapters MUST validate namespace exists (no implicit creation). Empty namespace with no data SHOULD return IndexNotReady (retryable) with retry_after_ms."
}