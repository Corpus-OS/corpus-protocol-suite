{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://adaptersdk.org/schemas/vector/vector.namespace.delete.success.json",
  "title": "vector.delete_namespace result",
  "description": "Confirmation & stats when a namespace is deleted.",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "namespace": { "type": "string", "maxLength": 256 },
    "deleted": { "type": "boolean" },
    "vectors_removed": { "type": "integer", "minimum": 0 },
    "purged": { "type": "boolean", "description": "True if data was purged with force=true." }
  },
  "required": ["namespace", "deleted"]
}
